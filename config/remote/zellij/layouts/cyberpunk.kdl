// CYBERPUNK LAYOUT - Ghost in the Shell dev environment
layout {
    default_tab_template {
        // Status bar at top with cyberpunk styling
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar"
        }
        children
        // Bottom status with system info
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
        // Floating panes for quick access
        floating_panes {
            pane {
                name "quick_terminal"
                x "10%"
                y "10%"
                width "80%"
                height "80%"
            }
        }
    }
    
    // Main workspace tab
    tab name="◉ MAIN_TERMINAL" focus=true {
        pane name="primary_shell" focus=true
    }
    
    // Code editing tab
    tab name="◉ CODE_MATRIX" {
        pane split_direction="vertical" {
            // File explorer pane
            pane size="25%" name="file_nav" {
                command "ls"
                args "-la" "--color=always"
            }
            // Main editor area
            pane name="editor_space"
        }
    }
    
    // System monitoring tab
    tab name="◉ SYS_MONITOR" {
        pane split_direction="vertical" {
            // Top system monitor
            pane size="50%" name="system_top" {
                command "htop"
            }
            // Bottom split for processes and network
            pane split_direction="horizontal" {
                pane name="processes" {
                    command "ps"
                    args "aux"
                }
                pane name="network" {
                    command "netstat"
                    args "-tuln"
                }
            }
        }
    }
    
    // Git operations tab
    tab name="◉ GIT_CONTROL" {
        pane split_direction="horizontal" {
            // Git status pane
            pane size="60%" name="git_main" {
                command "git"
                args "status"
            }
            // Git log pane
            pane name="git_log" {
                command "git"
                args "log" "--oneline" "--graph" "-10"
            }
        }
    }
}