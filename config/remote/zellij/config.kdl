// Zellij configuration for remote development

// Basic settings
default_shell "zsh"
simplified_ui true
pane_frames false

// Mouse support
mouse_mode true
scroll_buffer_size 10000

// Session configuration
session_serialization false
serialize_pane_viewport false

// Keybindings - optimized for development workflow
keybinds {
    normal {
        // Pane management
        bind "Alt h" { MoveFocus "Left"; }
        bind "Alt l" { MoveFocus "Right"; }
        bind "Alt j" { MoveFocus "Down"; }
        bind "Alt k" { MoveFocus "Up"; }
        
        // Split panes
        bind "Alt -" { NewPane "Down"; }
        bind "Alt |" { NewPane "Right"; }
        
        // Close pane
        bind "Alt q" { CloseFocus; }
        
        // Resize panes
        bind "Alt +" { Resize "Increase"; }
        bind "Alt _" { Resize "Decrease"; }
        bind "Alt =" { Resize "Increase"; }
        
        // Tab management
        bind "Alt t" { NewTab; }
        bind "Alt w" { CloseTab; }
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt 7" { GoToTab 7; }
        bind "Alt 8" { GoToTab 8; }
        bind "Alt 9" { GoToTab 9; }
        
        // Session management
        bind "Alt d" { Detach; }
        bind "Alt s" { LaunchOrFocusPlugin "session-manager" {
            floating true
        }; }
        
        // Search
        bind "Alt /" { SearchToggle; }
        
        // Copy mode
        bind "Alt [" { SwitchToMode "scroll"; }
    }
    
    scroll {
        bind "Ctrl c" { SwitchToMode "Normal"; }
        bind "j" "Down" { ScrollDown; }
        bind "k" "Up" { ScrollUp; }
        bind "d" { HalfPageScrollDown; }
        bind "u" { HalfPageScrollUp; }
        bind "/" { SwitchToMode "entersearch"; }
        bind "n" { Search "down"; }
        bind "N" { Search "up"; }
        bind "G" { ScrollToBottom; }
        bind "g" { ScrollToTop; }
    }
    
    search {
        bind "Ctrl c" { SwitchToMode "Normal"; }
        bind "j" "Down" { SearchDown; }
        bind "k" "Up" { SearchUp; }
        bind "n" { SearchDown; }
        bind "N" { SearchUp; }
    }
}

// Basic plugins
plugins {
    tab-bar { path "tab-bar"; }
    status-bar { path "status-bar"; }
    compact-bar { path "compact-bar"; }
}