{
  "global": {
    "check_for_updates_on_startup": true,
    "show_in_menu_bar": true
  },
  "profiles": [
    {
      "name": "Default profile",
      "selected": true,
      "virtual_hid_keyboard": { "keyboard_type_v2": "ansi" },

      "simple_modifications": [],

      "complex_modifications": {
        "parameters": {
          "basic.to_if_alone_timeout_milliseconds": 200,
          "basic.simultaneous_threshold_milliseconds": 50
        },
        "rules": [
          {
            "title": "Nick — Hyper System (without Shift)",
            "manipulators": [
              {
                "type": "basic",
                "description": "Caps = Esc (tap) / Hyper (hold) - Hyper is Ctrl+Opt+Cmd (no Shift)",
                "from": { "key_code": "caps_lock", "modifiers": { "optional": ["any"] } },
                "to": [
                  { "key_code": "left_command", "modifiers": ["left_control","left_option"] }
                ],
                "to_if_alone": [ { "key_code": "escape" } ]
              }
            ]
          },
          {
            "title": "Hyper — Core Actions",
            "manipulators": [
              {
                "type": "basic",
                "description": "Hyper+Space → Toggle last app (Aerospace)",
                "from": { "key_code": "spacebar", "modifiers": { "mandatory": ["control","option","command"] } },
                "to": [ { "shell_command": "/opt/homebrew/bin/aerospace focus-back-and-forth" } ]
              },
              {
                "type": "basic",
                "description": "Hyper+P → Raycast (universal)",
                "from": { "key_code": "p", "modifiers": { "mandatory": ["control","option","command"] } },
                "to": [ { "shell_command": "open -a 'Raycast'" } ]
              },
              {
                "type": "basic",
                "description": "Hyper+Enter → Ghostty",
                "from": { "key_code": "return_or_enter", "modifiers": { "mandatory": ["control","option","command"] } },
                "to": [ { "shell_command": "open -a 'Ghostty'" } ]
              },
              {
                "type": "basic",
                "description": "Hyper+O → VS Code Go to File",
                "from": { "key_code": "o", "modifiers": { "mandatory": ["control","option","command"] } },
                "to": [ { "key_code": "p", "modifiers": ["left_command"] } ],
                "conditions": [
                  { "type": "frontmost_application_if", "bundle_identifiers": ["^com\\.microsoft\\.VSCode(Insiders)?$"] }
                ]
              },
              {
                "type": "basic",
                "description": "Hyper+[ → Previous tab",
                "from": { "key_code": "open_bracket", "modifiers": { "mandatory": ["control","option","command"] } },
                "to": [ { "key_code": "open_bracket", "modifiers": ["left_command","left_shift"] } ]
              },
              {
                "type": "basic",
